extends: default
rules:
  braces:
    max-spaces-inside: 0
    min-spaces-inside: 0
  brackets:
    max-spaces-inside: 0
    min-spaces-inside: 0
  comments:
    min-spaces-from-content: 1
  line-length: disable
  document-start: disable
  empty-lines:
    level: warning
  quoted-strings:
    quote-type: any
    required: false
  trailing-spaces:
    level: warning
  indentation:
    level: warning

